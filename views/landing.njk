{%extends "layout.njk"%}


{%block content%}
        <div class="infobox">
        <div class="text">
            <p>As melhores receitas</p>
            <p2>Aprenda a construir os melhores pratos<br>
                com receitas criadas por profissionais<br>
                do mundo inteiro.</p2>
        </div>
        <img src="/images/chef.png" alt="Chefe de cozinhna">
        </div>

            <div class="most_accessed">
                <p>Mais acessadas</p>
    
                <section class="cards">

                    {%for item in items%}
                    <div class="card" id="{{item.id}}">
                        <div class="cardimg">
                            <img src="/images/food/{{item.img}}" alt="Imagem de {{item.title}}">
                        </div>
                        <div class="cardname">
                            <h>{{item.title}}</h>
                        </div>
                        <div class="cardchef">
                            <h>{{item.chef}}</h>
                        </div>
                    </div>
                    {%endfor%}

                </section>
            </div>

{%endblock%}
