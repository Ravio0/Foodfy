{%extends "layout.njk"%}

{%block title%}
<title>Foodfy - Receitas</title>
{%endblock%}

{%block strong2%}<strong>Receitas</strong>{%endblock%}

{%block content%}
        <section class="cards">
            {%for item in items%}
                <div class="card" id="{{item.id}}">
                    <div class="cardimg">
                        <img src={{item.image}} alt="Imagem de {{item.title}}">
                    </div>
                    <div class="cardname">
                        <h>{{item.title}}</h>
                    </div>
                    <div class="cardchef">
                        <h>por {{item.author}}</h>
                    </div>
                    </div>
            {%endfor%}
        </section>

{%endblock%}